    snakefile: "rules/single.smk"
    config: config

use rule * from single_plot_workflow as r_single_plot_workflow_*

module mixed_plot_workflow:
    snakefile: "rules/mixed.smk"
    config: config

use rule * from mixed_plot_workflow as r_mixed_plot_workflow_*

module tnpair_plot_workflow:
    snakefile: "rules/tnpair.smk"
